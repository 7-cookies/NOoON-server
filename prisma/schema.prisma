generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model place {
  id              Int      @id @default(autoincrement())
  invitation_code String   @db.VarChar(6)
  name            String   @db.VarChar(20)
  background      Int      @default(1)
  snowman_id      Int?
  snowman         snowman? @relation(fields: [snowman_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "place_snowman_null_fk")
  user            user[]
}

model snowman {
  id           Int       @id @default(autoincrement())
  head         Int       @default(1)
  accessary    Int       @default(1)
  eye          Int       @default(1)
  nose         Int       @default(1)
  mouse        Int       @default(1)
  arm          Int       @default(1)
  letter       String?   @default("") @db.VarChar(100)
  creator      String    @db.VarChar(20)
  created_date DateTime? @db.Date
  place        place[]
}

model user {
  id       Int    @id @default(autoincrement())
  username String @db.VarChar(20)
  password String @db.VarChar(4)
  place_id Int?
  place    place? @relation(fields: [place_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user_place_null_fk")
}
